---
layout: layouts/base.njk
templateClass: tmpl-post
---

{% set seriesPosts = collections.posts | getSeries(series) %}
<h1>{{ title | addNbsp | safe }}</h1>
<time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
{%- for tag in tags | filterTagList -%}
  {%- set tagUrl %}/tags/{{ tag | slug }}/{% endset -%}
  <a href="{{ tagUrl | url }}" class="postTag">{{ tag }}</a>
{%- endfor %}
{% if seriesPosts.length > 1 %}
  <div class="series">
    Cet article fait partie de la série "{{ series }}"
    <ol>
      {% for post in seriesPosts %}
        <li {% if post.url === page.url %} aria-current="page" {% endif %}>
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </li>
      {% endfor %}
    </ol>
  </div>
{% endif %}
{% if originalPost %}
  <p class="originalPost">Cet article a été initialement publié sur
    <a href="{{ originalPost }}" target="_blank" rel="noopenner noreferrer">dev.to</a>
  {% endif %}
  {{ content | addNbsp | safe }}
  {%- if collections.posts %}
    {%- set nextPost = collections.posts | getNextCollectionItem(page) %}
    {%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
    {%- if nextPost or previousPost %}
      <hr>
        <ul>
          {%- if nextPost %}
            <li>Next:
              <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a>
            </li>
          {% endif %}
          {%- if previousPost %}
            <li>Previous:
              <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a>
            </li>
          {% endif %}
        </ul>
      {%- endif %}
    {%- endif %}